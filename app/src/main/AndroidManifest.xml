<?xml version="1.0" encoding="utf-8"?>
<manifest package="edu.neu.campusassistant"
          xmlns:android="http://schemas.android.com/apk/res/android">

	<uses-permission android:name="android.permission.INTERNET"/>

	<application
		android:name=".utils.AppController"
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:supportsRtl="true"
		android:theme="@style/AppTheme">
		<activity
			android:name=".activity.MainActivity"
			android:screenOrientation="portrait">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>

				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity android:name=".activity.aao.CourseTableActivity">
		</activity>
		<activity android:name=".activity.aao.ExamAgendaListActivity">
		</activity>
		<activity android:name=".activity.aao.GradeListActivity">
		</activity>
		<activity android:name=".activity.aao.EmptyClassroomActivity">
		</activity>
		<activity android:name=".activity.aao.DevelopPlanActivity">
		</activity>
	</application>

</manifest>
