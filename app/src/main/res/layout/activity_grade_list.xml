<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="edu.neu.campusassistant.activity.GradeListActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:title="成绩单"
        app:titleTextColor="@android:color/white"
        android:elevation="8dp"/>
    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="?actionBarSize"
        android:layout_alignParentRight="true"
        android:elevation="8dp"
        android:clickable="true"
        android:background="@drawable/card_foreground">
        <!--<ImageView-->
            <!--android:id="@+id/grade_semaster_select_arrow"-->
            <!--android:layout_width="24dp"-->
            <!--android:layout_height="24dp"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_marginRight="12dp"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:src="@drawable/arrow_drop_down_white"/>-->
        <!--<Button-->
            <!--android:id="@+id/grad_semaster_select_button"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_toLeftOf="@+id/grade_semaster_select_arrow"-->
            <!--android:background="@drawable/card_foreground"-->
            <!--android:textColor="@color/colorWhite"-->
            <!--android:textAlignment="textEnd"-->
            <!--android:text="2015-2016上学期"/>-->
        <android.support.v7.widget.AppCompatSpinner
	        android:id="@+id/semester_spinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/grade_average"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_bar">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:text="平均绩点 0.00"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/grade_average">
        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/grade_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</RelativeLayout>
