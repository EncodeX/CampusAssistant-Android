<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/drawer_profile_section"
        android:layout_width="match_parent"
        android:layout_height="96dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/drawer_wallpaper"
                android:scaleType="center"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorTransparentBlack"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/profile_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:scaleType="fitCenter"
                android:background="@color/colorClear"
                android:layout_margin="10dp"
                android:src="@drawable/default_profile_icon"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/profile_icon"
            android:layout_weight="3">
            <RelativeLayout
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"
                    android:text="用户名"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/user_info"
                android:layout_below="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"
                    android:text="软件学院 软件工程 20132037"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/drawer_personal_account_section"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/drawer_profile_section"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1">
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorgray"
                android:textSize="14sp"
                android:text="@string/profile_account_title"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/account_education_system"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:clickable="true"
            android:background="@drawable/card_foreground">
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:text="@string/account_education_system"/>
            <TextView
                android:id="@+id/account_education_system_bind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:background="@color/colorClear"
                android:textColor="@color/colorAccent"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                android:text="已锁定"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/account_library"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:clickable="true"
            android:background="@drawable/card_foreground">
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:text="@string/account_library"/>
            <TextView
                android:id="@+id/account_library_bind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/colorAccent"
                android:background="@color/colorClear"
                android:textSize="12sp"
                android:text="已锁定"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/account_ecard"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:clickable="true"
            android:background="@drawable/card_foreground">
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:text="@string/account_ecard"/>
            <TextView
                android:id="@+id/account_ecard_bind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/colorgray"
                android:background="@color/colorClear"
                android:textSize="12sp"
                android:text="未锁定"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:background="@color/rippleBlack">
            </View>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/drawer_ipwg_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/drawer_personal_account_section"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1">
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorgray"
                android:textSize="14sp"
                android:text="@string/profile_ipwg_title"/>
            <Button
                android:id="@+id/drawer_ipwg_connect_button"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                style="@style/AppTheme.Button.Pink.Borderless"
                android:textSize="12sp"
                android:textStyle="bold"
                android:text="连接"
                android:elevation="2dp"/>
            <Button
                android:id="@+id/drawer_ipwg_disconnect_button"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/drawer_ipwg_connect_button"
                style="@style/AppTheme.Button.Clear.Borderless"
                android:textSize="12sp"
                android:textStyle="bold"
                android:text="断开"/>
        </RelativeLayout>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentBottom="true"
                android:textColorHint="@color/colorgray"
                android:hint="@string/ipwg_user_name_placeholder"
                android:singleLine="true"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentBottom="true"
                android:textColorHint="@color/colorgray"
                android:hint="@string/ipwg_password_placeholder"
                android:singleLine="true"
                android:inputType="textPassword"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:background="@color/rippleBlack">
            </View>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>